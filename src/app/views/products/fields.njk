<div class="field">
  <div>
    <label for="brand">Marca</label>
  </div>
  <div>
    <select name="brand">
      <option value="">Selecione...</option>
      <option value="Samsung"
        {% if product.brand == "Samsung" %}
          selected
        {% endif %}
      >Samsung</option>
      <option value="iPhone"
        {% if product.brand == "iPhone" %}
          selected
        {% endif %}
      >iPhone</option>
      <option value="Motorola"
        {% if product.brand == "Motorola" %}
          selected
        {% endif %}
      >Motorola</option>
    </select>
  </div>
</div>

<div class="field">
  <div>
    <label for="model">Modelo</label>
  </div>
  <div>
    <input 
      type="text" 
      name="model" 
      id="model" 
      value="{{ product.model }}"
    />
  </div>
</div>

<div class="field">
  <div>
    <label for="price">Preço</label>
  </div>
  <div>
    <input 
      type="text" 
      name="price" 
      id="price"
      value="{{ product.price }}"
      onkeydown="Mask.apply(this, 'formatBRL')"
    />
  </div>
</div>

<div class="field">
  <div>
    <label for="color">Cor</label>
  </div>
  <div>
    <input 
      type="text" 
      name="color" 
      id="color"
      value="{{ product.color }}"
    />
  </div>
</div>

<div class="field">
  <div>
    <label for="int">Armazenamento interno</label>
  </div>
  <div>
    <input 
      type="text" 
      name="storage" 
      id="int"
      value="{{ product.storage }}"
    />
  </div>
</div>

<div class="field">
  <div>
    <label for="status">Condição do aparelho</label>
  </div>
  <div>
    <select name="condition">
      <option value="">Selecione...</option>
      <option value="good"
        {% if product.condition == "good" %}
          selected
        {% endif %}
      >Bom</option>
      <option value="very_good"
        {% if product.condition == "very_good" %}
          selected
        {% endif %}
      >Muito bom</option>
      <option value="excelent"
        {% if product.condition == "excelent" %}
          selected
        {% endif %}
      >Excelente</option>
    </select>
  </div>
</div>

<div class="field">
    <div class="image">
      <div id="photos-upload">
        <input 
          type="file" 
          name="photos" 
          id="photos-input"
          multiple 
          accept="image/*"
          title=""
          onchange="PhotosUpload.handleFileInput(event)"
        />
        <span class="choose">Escolher imagens</span>
      </div>

      {% if product.photos %}
        <div id="photos-preview">
          {% for photo in product.photos %}
            <div id="{{ photo.id }}" class="photo" onclick="PhotosUpload.removePhoto(event)">
              <img src="{{ photo.path }}" alt="{{ product.brand}} {{ product.model }}">
              <i 
                class="material-icons"
                 onclick="PhotosUpload.countRemovedPhotos(event)"
              >close</i>
            </div>
          {% endfor %}
          <input type="hidden" name="removedPhotos">
        </div>
      {% else%}
        <div id="photos-preview"></div>
      {% endif %}
    </div>
</div>

<div class="field">
  <div>
    <label for="desc">Descrição</label>
  </div>
  <div>
    <textarea name="description" id="desc" maxlength="2000">{{ product.description }}</textarea>
  </div>
</div>