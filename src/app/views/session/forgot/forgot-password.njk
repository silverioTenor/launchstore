{% extends '../parts/header.njk' %}

{% block content %}
<section id="form-forgot">
    <h2>Recuperação de senha</h2>

    <form method="POST" action="/session/forgot-password">

      <div class="fields">
        <fieldset>

          <div class="field" id="field-email">
            <label for="email">E-mail</label>
            <input 
              type="email" 
              name="email" 
              id="email"
              {% if user.email %}
                  value="{{ user.email }}"
              {% endif %}
              onblur="Validate.apply(this, 'isEmail')"
            />
          </div>
        </fieldset>
        
        <button type="submit" class="button">Recuperar senha</button>
      </div>

    </form>
</section>
{% endblock content %}