{% extends '../layout.njk' %}

{% block content %}
  <section id="shopping">
    <div class="header">
      <h2>Meus anúncios</h2>
      <a href="/products/create" class="button">Novo Anúncio</a>
    </div>

    <div class="ads-container">
      {% for product in products %}
        <div id="{{ product.id }}" class="ads" onclick="Link.redirect(this, '/products/show/')">
          <img src="{{ product.image }}" alt="{{ product.model }}"/>

          <div class="ads-content">
            <h4>
              <a>
                {{ product.brand }}
                {{ product.model }}
                {{ product.storage }}
                -
                {{ product.color }}
              </a>
            </h4>

            <span>{{ product.price }}</span>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock content %}