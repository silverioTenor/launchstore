{% macro products(name, classes, products) %}
  {% if name %}
    <div class="title">
      <h2>{{ name }}</h2>
    </div>
  {% endif %}
    
  <div class="cardsAll {{ classes }}">
    {% for product in products %}
      <a href="/products/show/{{ product.id }}">
        <div class="card">
          <img src="{{ product.image }}" alt="{{ product.model }}"/>
          <div class="content">
            <p>{{ product.brand }}</p>

            <h2>{{ product.brand }} {{ product.model }} {{ product.storage }} - {{ product.color }}</h2>

            <div class="price">
              <span>A partir de</span>
              <span>{{ product.price }}</span>

              <p>12x de {{ product.priceParcel }} sem juros</p>
            </div>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
{% endmacro %}